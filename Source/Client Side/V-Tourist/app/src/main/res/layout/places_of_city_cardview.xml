<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        card_view:cardElevation="0.01dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/card_view">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageViewPlace"

                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:background="@color/black"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/namePlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageViewPlace"
                android:paddingLeft="16dp"
                android:textSize="20sp"
                android:textColor="@color/textPrimary"
                android:textStyle="bold"
                android:text="Ten"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/locationPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageViewPlace"
                android:paddingLeft="16dp"
                android:layout_below="@+id/namePlace"
                android:textSize="15sp"
                android:textColor="@color/textPrimary"
                android:textStyle="italic"
                android:text="Dia chi"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/decriptionPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageViewPlace"
                android:paddingLeft="16dp"
                android:layout_below="@+id/locationPlace"
                android:textSize="17sp"
                android:textColor="@color/textPrimary"
                android:text="Mo ta"
                android:maxLines="2"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>